
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</head>
<body>
    <form id="form1" method="post">
        <div class="form-group col-md-12">
            <input type="text" name="StudentID" placeholder="StudentID" pattern="[0-9]{1,9}" title="No more than 9 numbers" required>
        </div>
        <div class="form-group col-md-12">
            <input type="password" name="Password" placeholder="Password" pattern="[^\s]{1,20}" title="Less than 20 characters no space" required>
        </div>
        <div class="g-recaptcha" data-sitekey="6Lf-EtUUAAAAAIgtWDtqZvr2RJIxP2ThLY0nrFcD"></div>
        <div>@ViewBag.Message</div>
        <input type="submit" value="Submit">
    </form>
</body>
