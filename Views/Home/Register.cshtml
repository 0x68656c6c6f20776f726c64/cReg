@model cReg_WebApp.Models.ViewModels.HomeViewModels.FindCourseViewModel
@{
    ViewData["Title"] = "Register Page";
    if (null != TempData["alertMessage"])
    {
        <script type="text/javascript">
       alert('@TempData["alertMessage"]');
        </script>
    }
}

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/@@tarekraafat/autocomplete.js@@7.2.0/dist/js/autoComplete.min.js"></script>
    <script src="~/js/searchCourses.js"></script>
}
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tarekraafat/autocomplete.js@@7.2.0/dist/css/autoComplete.min.css">
</head>
<body>
    <div>
        <input id="autoComplete" tabindex="1" />
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>
                    Course Code
                </th>
                <th>
                    Course Name
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.courseList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.courseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.courseDescription)
                    </td>
                    <td>
                        <a asp-controller="course" asp-action="RegisterDetails" asp-route-cid="@item.courseId">View Course</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</body>
</html>